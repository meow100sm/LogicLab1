<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Здесь ты можешь выбрать логическую игру."
            android:textColor="@color/blue"
            android:textSize="23sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:weightSum="5">

        <Button
            android:id="@+id/memory_game"
            android:text="1) Развиваем память"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbackground1"
            android:layout_weight="1.01"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"/>

        <Button
            android:id="@+id/math_game"
            android:text="2) Считаем на скорость"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbackground1"
            android:layout_weight="1.01"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"/>

        <Button
            android:id="@+id/plusminus_game"
            android:text="3) Обыграй бота!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbackground1"
            android:layout_weight="1.01"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"/>
        <Button
            android:id="@+id/asteroid_game"
            android:text="4) Берегись астероида!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbackground1"
            android:layout_weight="1.01"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"/>

        <Button
            android:id="@+id/game_2048"
            android:text="5) игра 2048"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbackground1"
            android:layout_weight="1.01"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>